<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.einbrain.swahili01"
    android:versionCode="8"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <permission android:name="WRITE_EXTERNAL_STORAGE"></permission>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" 
        android:allowBackup="true">
        <activity
            android:name="com.einbrain.swahili01.activity.MainActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:launchMode="singleInstance"
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.einbrain.swahili01.activity.MenuActivity"
            android:label="@string/title_activity_menu" 
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:noHistory="true" 
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name="com.einbrain.swahili01.activity.ResultActivity"
            android:label="@string/title_activity_result" 
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:noHistory="true" 
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name="com.einbrain.swahili01.activity.GameActivity"
            android:label="@string/title_activity_game" 
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:noHistory="false" 
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
        <activity
            android:name="com.einbrain.swahili01.activity.EndActivity"
            android:label="@string/title_activity_end" 
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen"
            android:noHistory="false" 
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
    </application>

</manifest>